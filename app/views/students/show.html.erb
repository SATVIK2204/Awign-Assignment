                <tr>
                <th scope="col">#</th>
                <th scope="col">Names</th>
                <th scope="col">Profile Link</th>
                </tr>
            </thead>
            <tbody>
                <% @student.enrollments.each do |enrollment| %>
                    <tr>
                    <th scope="row"><%= enrollment.course.id%></th>
