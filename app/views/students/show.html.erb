<div class="card ">
  <div class="card-header">
    <h3><%= @student.name%>'s Details</h3>
  </div>
    <div class="card-body">
    
        <dl class="row">
            <dt class="col-sm-3">Age -</dt>
            <dd class="col-sm-9"><%= @student.age%></dd>

            <dt class="col-sm-3">Courses -</dt>
            <dd class="col-sm-9">
